{{ 'banner.css' | asset_url | stylesheet_tag }}

{% if section.settings.banner_image != null %}
    <div class="container">
        {%- if section.settings.banner_image != blank -%}
            <img 
                src="{{ section.settings.banner_image | image_url }}" 
                alt=""
                loading="lazy"
                width="{{ section.settings.banner_image.width }}"
                height="{{ section.settings.banner_image.width | divided_by: section.settings.banner_image.aspect_ratio }}"
            >
        {%- else -%}
            {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
        <div class="content_container">
            <div class="content">
                {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'heading' %}
                        <div class="header">
                            {% if block.settings.season != blank %}
                                <div class="season">
                                    {{ block.settings.season }}
                                </div>
                            {% endif %}
                            {% if block.settings.heading != blank %}
                                <div class="header_text">
                                    {{ block.settings.heading }}
                                </div>
                            {% endif %}
                        </div>
                    {% when 'buttons' %}
                        {% if block.settings.button_text != blank %}
                            <div class="button">
                                <a href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
                            </div>
                        {% endif %}
                {% endcase %}
            {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}

{% schema %}
{
    "name": "Banner shoes",
    "class": "banner",
    "tag": "div",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner image"
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text align",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "center"
        }
    ],
    "blocks": [
        {
            "type": "heading",
            "name": "Heading",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "season",
                    "label": "Season"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                }
            ]
        },
        {
            "type": "buttons",
            "name": "Button",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button text",
                    "default": "Shop Now"
                },
                {
                    "type": "url",
                    "id": "button_url",
                    "label": "Button url"
                }
            ]
        }
    ],
    "presets": [
    {
      "name": "Banner shoes",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}