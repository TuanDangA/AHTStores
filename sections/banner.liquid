{{ 'banner.css' | asset_url | stylesheet_tag }}

{% if section.settings.banner_image != null %}
    <div class="container" style="background-image: {{ section.settings.banner_image | image_url }}">
        <!-- <img 
            src="{{ section.settings.banner_image | image_url }}" 
            alt=""
            loading="lazy"
            width="{{ section.settings.banner_image.width }}"
            height="{{ section.settings.banner_image.width | divided_by: section.settings.banner_image.aspect_ratio }}"
        > -->
        <div class="content_container">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'heading' %}
                        <div class="header">
                            {{ section.settings.heading }}
                        </div>
                    {% when 'buttons' %}
                        <div class="button">
                            <a href="{{ section.blocks.button.settings.button_url }}">{{ section.settings.button_text }}</a>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
{% endif %}

{% schema %}
{
    "name": "banner_shoes",
    "class": "banner",
    "tag": "div",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "banner image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "heading"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "button text",
            "default": "Shop Now"
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "text align",
            "options": [
                {
                    "value": "left",
                    "label": "left"
                },
                {
                    "value": "center",
                    "label": "center"
                },
                {
                    "value": "right",
                    "label": "right"
                }
            ],
            "default": "center"
        }
    ],
    "blocks": [
        {
            "type": "heading",
            "name": "heading",
            "limit": 1,
            "settings": [
            ]
        },
        {
            "type": "buttons",
            "name": "button",
            "limit": 1,
            "settings": [
                {
                    "type": "url",
                    "id": "button_url",
                    "label": "button url"
                }
            ]
        }
    ],
    "presets": [
    {
      "name": "banner_shoes",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}