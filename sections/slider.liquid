{{ 'slider.css' | asset_url | stylesheet_tag }}

<div class="container">
    {%- if section.settings.image != blank -%}
        <div class="image">
            <img 
                src="{{ section.settings.image | image_url: width: 1500 }}" 
                alt=""
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
                loading="lazy"
            >
        </div>
    {%- endif -%}
    <div class="content">
        {%- for block in section.blocks -%}

            {%- case block.type -%}
                {% when 'heading' %}
                    <span>{{ block.settings.heading | escape }}</span>
                {% when 'text' %}
                    <span>{{ block.settings.text | escape }}</span>
                {% when 'buttons' %}
                    <a {% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %}>{{ block.settings.button_label | escape }}</a>
            {%- endcase -%}
        {%- endfor -%}
    </div>
</div>

{% schema %}
{
  "name": "slider",
  "class": "div",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "image_1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "image_2"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 0,
      "label": "image_overlay_opacity"
    },
    {
      "type": "select",
      "id": "banner_height",
      "label": "banner_height",
      "options": [
        {
          "value": "small",
          "label": "small"
        },
        {
          "value": "medium",
          "label": "medium"
        },
        {
          "value": "high",
          "label": "high"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "label": "desktop_content_position",
      "options": [
        {
          "value": "top-left",
          "label": "top-left"
        },
        {
          "value": "top-center",
          "label": "top-center"
        },
        {
          "value": "top-right",
          "label": "top-right"
        },
        {
          "value": "middle-left",
          "label": "middle-left"
        },
        {
          "value": "middle-center",
          "label": "middle-center"
        },
        {
          "value": "middle-right",
          "label": "middle-right"
        },
        {
          "value": "bottom-left",
          "label": "bottom-left"
        },
        {
          "value": "bottom-center",
          "label": "bottom-center"
        },
        {
          "value": "bottom-right",
          "label": "bottom-right"
        }
      ],
      "default": "middle-center"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "label": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.slider.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Image Banner",
          "label": "t:sections.slider.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "t:sections.slider.blocks.heading.settings.heading_size.label",
          "options": [
            {
              "value": "Small",
              "label": "t:sections.slider.blocks.heading.settings.heading_size.options__1.label"
            },
            {
              "value": "Medium",
              "label": "t:sections.slider.blocks.heading.settings.heading_size.options__2.label"
            },
            {
              "value": "Large",
              "label": "t:sections.slider.blocks.heading.settings.heading_size.options__3.label"
            }
          ],
          "default": "Medium"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.slider.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "t:sections.slider.blocks.text.settings.text.label",
          "default": "abcde"
        },
        {
          "type": "select",
          "id": "text_style",
          "label": "t:sections.slider.blocks.text.settings.text_style.label",
          "options": [
            {
              "value": "body",
              "label": "t:sections.slider.blocks.text.settings.text_style.options__1.label"
            },
            {
              "value": "subtitle",
              "label": "t:sections.slider.blocks.text.settings.text_style.options__2.label"
            },
            {
              "value": "uppercase",
              "label": "t:sections.slider.blocks.text.settings.text_style.options__3.label"
            }
          ]
        }
      ]
    },
    {
      "type": "buttons",
      "name": "t:sections.slider.blocks.buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "shop now",
          "label": "t:sections.slider.blocks.buttons.settings.button_label.label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.slider.blocks.buttons.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "image-slider",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %} 