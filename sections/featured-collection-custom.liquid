{{ 'featured-collection-custom.css' | asset_url | stylesheet_tag }}

<div class="featured-collection-custom-container">
  <div class="featured-collection-custom-heading">
    {% if section.settings.heading != blank %}
      <div class="featured-collection-custom-header">
        {{ section.settings.heading }}
      </div>
    {% endif %}
    {% if section.settings.sub_heading != blank %}
      <div class="featured-collection-custom-sub-header">
        {{ section.settings.sub_heading }}
      </div>
    {% endif %}
  </div>
  <div class="featured-collection-custom-content">
    {% for product in section.settings.collection.products %}
      <div class="product">
        <div class="product-image">
          <img src="{{ product.featured_image | image_url }}" alt="">
        </div>
        <div class="product-info">

        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured collection cus",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured collection cus"
    }
  ]
}
{% endschema %}
