{{ 'featured-collection-custom.css' | asset_url | stylesheet_tag }}

<div class="featured-collection-custom-container">
  {% if section.settings.heading != blank %}
    <div class="featured-collection-custom-header">
      {{ section.settings.heading }}
    </div>
  {% endif %}
  {% if section.settings.sub_heading != blank %}
    <div class="featured-collection-custom-sub-header">
      {{ section.settings.sub_heading }}
    </div>
  {% endif %}
  <div class="featured-collection-custom-content">
    {% for product in section.settings.collection.products %}
      <div class="product" style="width: 24%;">
        <div class="product-image" id="product-image-{{ product.id }}">
          <a href="{{ product.url }}"><img src="{{ product.featured_image | image_url }}" alt=""></a>
        </div>
        <div class="product-info">
          <div class="product-title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </div>
          <div class="product-ratings">
            <a href="{{ product.url }}#reviews-product-id" alt="{{ 'products.product.reviews' | t }}" title="{{ 'products.product.reviews' | t }}">
              <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
            </a>
          </div>
          <div class="product-variables">
            <div class="product-prices">
              {% if product.compare_at_price != null %}
                <div class="compare-at-price">
                  <a href="{{ product.url }}">{{ product.compare_at_price | money_without_trailing_zeros }}</a>
                </div>
              {% endif %}
              <div class="current-price">
                <a href="{{ product.url }}">{{ product.price | money_without_trailing_zeros }}</a>
              </div>
            </div>
            {% if product.has_only_default_variant == false %}
              <div class="product-vars">
                {% for variant in product.variants %}
                  <button class="dot" id="{{ product.id }}" style="background-color: {{ variant.title }};" data-image="{{ variant.image | image_url: width: 350, height: 350 }}" onclick="chooseVariant({{ product.id }})"></button>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <script type="text/javascript">
    function chooseVariant(id){
      console.log(1);
      var image = document.getElementsById(id);
      $('#product-image-'+id).attr("src", image.getAttribute("data-image"));
    }
  </script>
</div>

{% schema %}
{
  "name": "Featured collection cus",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured collection cus"
    }
  ]
}
{% endschema %}
