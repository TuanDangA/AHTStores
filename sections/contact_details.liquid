{{ 'contact_details.css' | asset_url | stylesheet_tag }}

<div class="container_contact_details">
    {% for block in section.blocks %}
        {%- case block.type -%}
            {%- when 'heading' -%}
                <div class="heading">
                    {% if block.settings.header_line_1 != blank %}
                        <div class="heading_line_1">
                            {{ block.settings.header_line_1 }}
                        </div>
                    {% endif %}
                    {% if block.settings.header_line_2 != blank %}
                        <div class="heading_line_2">
                            {{ block.settings.header_line_2 }}
                        </div>
                    {% endif %}
                </div>
            {%- when 'text' -%}
                <div class="info_details">
                    <div class="phone">
                        <div class="title_info">
                            PHONE
                        </div>
                        <div class="content">
                            {{ block.settings.phone }}
                        </div>
                    </div>
                    <div class="address">
                        <div class="title_info">
                            ADDRESS
                        </div>
                        <div class="content">
                            {{ block.settings.address }}
                        </div>
                    </div>
                    <div class="email">
                        <div class="title_info">
                            EMAIL
                        </div>
                        <div class="content">
                            {{ block.settings.email }}
                        </div>
                    </div>
                </div>
            {%- when 'navigation' -%}
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.314514679084!2d105.78179631492932!3d21.020097893449915!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab4c50a6bcf7%3A0x6a91f7f04869ae43!2sArrowHiTech%20Jsc!5e0!3m2!1svi!2s!4v1657779355326!5m2!1svi!2s" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            {% when 'notes' %}
                <div class="notes">
                    <div class="note_1">
                        {{ block.settings.note_1 }}
                    </div>
                    <div class="note_2">
                        {{ block.settings.note_2 }}
                    </div>
                </div>
        {%- endcase -%}
    {% endfor %}
</div>

{% schema %}
{
    "name": "Contact details",
    "blocks": [
        {
            "type": "heading",
            "name": "Details header",
            "limit": 1,
            "settings": [
                {
                    "type":"text",
                    "id": "header_line_1",
                    "label":"Header line 1"
                },
                {
                    "type":"text",
                    "id": "header_line_2",
                    "label":"Header line 2"
                }
            ]
        },
        {
            "type": "text",
            "name": "Details info",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "phone",
                    "label": "Phone number"
                },
                {
                    "type": "text",
                    "id":"address",
                    "label": "Address"
                },
                {
                    "type": "text",
                    "id": "email",
                    "label": "Email"
                }
            ]
        },
        {
            "type": "navigation",
            "name": "Navigation",
            "limit": 1,
            "settings": [
                {
                    "type": "url",
                    "id": "navigation_url",
                    "label": "Navigation url"
                }
            ]
        },
        {
            "type": "notes",
            "name": "Notes",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "note_1",
                    "label": "Note 1"
                },
                {
                    "type": "text",
                    "id": "note_2",
                    "label": "Note 2"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Contact details",
            "blocks": [
                {
                    "type": "heading"
                },
                {
                    "type": "text"
                },
                {
                    "type": "navigation"
                },
                {
                    "type": "notes"
                }
            ]
        }
    ]
}
{% endschema %}